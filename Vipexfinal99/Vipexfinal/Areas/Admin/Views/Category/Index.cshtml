@model List<Category>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="">
            <div class="card-body" style="width:1200px">
                <h4 class="card-title ml-5 mb-3">Kateqoriya cədvəli</h4>
                <a class="btn btn-success ml-5 mb-3" asp-action="Create">Kateqoriya yarat </a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Kateqoriya
                                </th>
                                <th>
                                    Tənzimləmələr
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category cat in Model)
                            {
                                <tr>
                                    <td>
                                        @count


                                    </td>
                                    <td>
                                        @cat.Name


                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Detail" asp-route-id="@cat.Id"><i class="mdi mdi-account-card-details"> </i></a>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@cat.Id"><i class="mdi mdi-auto-fix"> </i></a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cat.Id"> <i class="mdi mdi-close-box"> </i></a>
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



