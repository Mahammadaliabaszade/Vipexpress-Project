@model Category;
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row mt-5">
        <h3 class="mb-5"> Kateqoriyanın adı:</h3>
        <h3 class=" mb-5 pl-4">@Model.Name</h3>
        <br />

    </div>
    <h4 class="mb-4">Bu kateqoriyanı silmək istədiyinizə  əminsinizmi??</h4>
    <div class="row">
        <form method="post">
            <input type="submit" value="Sil" class="btn btn-danger" />
        </form>
        <a class="btn btn-dark" style="margin-left:20px;width:130px" asp-action="Index">Geriyə qayıt</a>
    </div>
</div>
