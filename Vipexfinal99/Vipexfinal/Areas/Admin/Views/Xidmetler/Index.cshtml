@model List<Xidmet>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="width:800px">
                <h4 class="card-title">Xeberler table</h4>
                <a class="btn btn-success" asp-action="Create">Xeber yaratmaq</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Xidmət başlıq
                                </th>
                                <th>
                                    Şəkil
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Xidmet cat in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    
                                    @cat.Title
                                </td>
                                <td>
                                    
                                    <img src="@cat.Image" style="height:80px;width:80px" />
                                </td>
                                <td>

                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@cat.Id"><i class="mdi mdi-auto-fix"> </i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cat.Id"> <i class="mdi mdi-close-box"> </i></a>
                                </td>

                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



