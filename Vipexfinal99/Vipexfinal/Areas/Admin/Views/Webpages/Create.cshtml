@model Vipexfinal.ViewModels.WebpagesCrudVm
@{
    ViewData["Title"] = "Create";
}

<div class="col-12 ml-5 mt-5 grid-margin stretch-card">
    <form asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">Şəklin linkini yazın</label>
            <input asp-for="Image" placeholder="Elave etmek istediyiniz seklin linkini atin" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Link" class="control-label"></label>
            <input asp-for="Link" class="form-control" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select class="custom-select" asp-for="CategoryId">
                <option selected>Open this select menu</option>
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>

        </div>




        <div class="mt-4 mb-3 ">
            <a class="btn-danger" asp-action="Index">Back to List</a>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
   
</div>


