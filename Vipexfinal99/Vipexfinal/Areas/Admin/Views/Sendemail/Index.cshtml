@model List<Elaqe>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="width:800px">

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Müraciətçi
                                </th>
                                <th>
                                    Elektron ünvan
                                </th>

                                <th>
                                    Nömrə
                                </th>
                                <th>
                                    Şirkət
                                </th>
                                <th>
                                    Mesaj
                                </th>
                                <th>
                                    Cavabla
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Elaqe email in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @email.Name
                                </td>
                                <td>
                                    @email.Epoct
                                </td>
                                <td>
                                    @email.Number
                                </td>
                                <td>
                                    @email.Shirket
                                </td>
                                <td>
                                    @email.Message
                                </td>
                                <td>
                                    <a href="https://mail.google.com/mail/u/0/#inbox?compose=new"> Elektron ünvan vasitəsilə cavabla</a>

                                </td>

                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

