@model List<Sorgu>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="width:800px">

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Link
                                </th>
                                <th>
                                    Basliq
                                </th>
                                <th>
                                    Mesaj
                                </th>
                              

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Sorgu appUser in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @appUser.AppUser.UserName
                                </td>
                                <td>
                                    @appUser.Link
                                </td>
                                <td>
                                    @appUser.Title
                                </td>
                                <td>
                                    @appUser.Description
                                </td>
                                <td>
                                    @appUser.Sendtime
                                </td>
                                <td>

                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@appUser.Id"> <i class="mdi mdi-close-box"> </i></a>
                                </td>



                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>