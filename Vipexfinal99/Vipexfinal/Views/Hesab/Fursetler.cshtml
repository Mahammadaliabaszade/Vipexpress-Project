@model HomeVm;
@{
    ViewData["Title"] = "Fursetler";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VIPEX</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/fursetler.css">
</head>

<body>

    
    <section style="margin-top: 30px;">
        <div class="wshipping-content-block wshipping-breadcroumb inner-bg-1">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-7">
                        <h1>Fürsətlər</h1>
                        <a href="https://vipex.az" title="">Əsas</a> / Fürsətlər
                    </div>
                    <div class="col-12 col-lg-5 text-right">
                        <h4>Siz sifariş edin, biz çatdıraq. <span>SÜRƏTLİ</span> və <span>TƏHLÜKƏSİZ!</span></h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section style="margin-bottom: 30px;">
        <div class="container" style="margin-top: 30px;">
            <div class="row">

                <div class="col-lg-12 text-box text-box-style3" style="margin-bottom: 20px;">
                    <div class="text-box">
                        <button class="izem" style="background:#FF8728;margin-bottom: 10px;">
                           
                        </button>

                        <button class="izem" style="background:#FF8728;margin-bottom: 10px">
                            <a asp-controller="Sifaris" asp-action="Index">SIFARIS EDIN</a>
                        </button>

                        <button class="izem" style="background:#FF8728;margin-bottom: 10px">
                            <a asp-controller="Beyanname" asp-action="Index">BEYANNAME</a>
                        </button>



                    </div>


                </div>
                <div class="col-lg-4 ">
                    <ul class="category-list d-none-down-md ">
                        <li class="item "><a asp-controller="Hesab" asp-action="Fursetler" title=" ">Mağazalardakı fürsətlər</a></li>
                        <li class="item "><a asp-controller="Hesab" asp-action="Index" title=" ">Xaricdəki ünvanlarım</a></li>
                        <li class="item "><a asp-controller="Hesab" asp-action="Odenis" title=" ">Ödəniş et</a></li>
                        <li class="item "><a asp-controller="Hesab" asp-action="Sifaristabl" title=" ">SİFARİŞLƏRİM</a></li>
                        <li class="item "><a asp-controller="Beyanname" asp-action="Beyantabl" title=" ">BƏYANNAMƏLƏRİM</a></li>

                        <li class="item "><a asp-controller="Hesab" asp-action="Gozleyenler" title=" ">Təstiq gözləyən <span class="badge badge-success ">Yeni</span></a></li>

                        <li class="item "><a asp-controller="Hesab" asp-action="Balansartir">Balans artir</a></li>
                        <li class="item "><a asp-controller="Hesab" asp-action="Sorgularlist">Sorğular</a></li>

                        <li class="item "><a asp-controller="Account" asp-action="Logout" title=" ">Çıxış</a></li>
                    </ul>
                </div>
                <div class=" col-12 col-lg-8 ">
                    <div class="col-12 col-md-8 col-lg-8 offset-md-2 offset-lg-2">
                        <div class="section-title wow fadeInUp" style="visibility: visible; animation-name: fadeInUp; margin-bottom: 25px;">
                            <h2>Mağazalardakı fürsətlər</h2>
                        </div>
                    </div>
                    <div class="tracking-block">
                        @foreach (Furset fr in Model.Fursets)
                        {
                            <div class="banner" style="margin-bottom: 5%;border:5px solid white;width: 100%;">
                                <a target="_blank" href="@fr.Link"> <img src="@fr.Image"> </a>
                            </div>
                        }




                    </div>
                </div>

            </div>

        </div>
    </section>

</body>

</html>